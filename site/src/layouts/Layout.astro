---
interface Props {
  title?: string;
}

const { title } = Astro.props;

const today = new Date()
  .toLocaleDateString("en-US", {
    year: "numeric",
    month: "long",
    day: "numeric",
  })
  .replace(/(\d+)(?=(,\s\d+)$)/, (match) => {
    const num = parseInt(match);
    const suffix = ["th", "st", "nd", "rd"][
      num % 10 > 3 || (num % 100) - (num % 10) == 10 ? 0 : num % 10
    ];
    return num + suffix;
  });
